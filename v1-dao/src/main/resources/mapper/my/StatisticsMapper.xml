<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zw.dao.mapper.my.StatisticsMapper">

  <sql id="Example_Where_Clause">
    <where>
      <foreach collection="param2.oredCriteria" item="criteria" separator="or">
        <if test="criteria.valid">
          <trim prefix="(" prefixOverrides="and" suffix=")">
            <foreach collection="criteria.criteria" item="criterion">
              <choose>
                <when test="criterion.noValue">
                  and ${criterion.condition}
                </when>
                <when test="criterion.singleValue">
                  and ${criterion.condition} #{criterion.value}
                </when>
                <when test="criterion.betweenValue">
                  and ${criterion.condition} #{criterion.value} and #{criterion.secondValue}
                </when>
                <when test="criterion.listValue">
                  and ${criterion.condition}
                  <foreach close=")" collection="criterion.value" item="listItem" open="(" separator=",">
                    #{listItem}
                  </foreach>
                </when>
              </choose>
            </foreach>
          </trim>
        </if>
      </foreach>
    </where>
  </sql>

  <select id="getTicketSum" resultType="com.zw.vo.statistics.STicketResponseVo">
    SELECT DATE_FORMAT(create_time,#{param1}) as d,count(*) as cum
    FROM zs_ticket
    <if test="_parameter != null">
      <include refid="Example_Where_Clause" />
    </if>
    GROUP BY DATE_FORMAT(create_time,#{param1})
    ORDER BY d asc;
  </select>

  <select id="getUserPriceSum" resultType="com.zw.vo.statistics.SProcessResponseVo">
    SELECT  sum(price) as price,sum(price_add) as priceAdd,count(*) as cum,user_id as userId, DATE_FORMAT(update_time,#{arg0}) as d
    FROM zs_process
    <if test="_parameter != null">
      <include refid="Example_Where_Clause" />
    </if>
    GROUP BY user_id, DATE_FORMAT(update_time,#{param1})
    ORDER BY price desc;
  </select>
</mapper>